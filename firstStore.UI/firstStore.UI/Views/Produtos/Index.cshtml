@model IEnumerable<Produto>
@{
    ViewBag.Title = "Listagem de Produtos";
}
<h2>@ViewBag.Title</h2>

<div>
    <a class="btn btn-success" href="@Url.Action("AddEdit")">Adicionar</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
     @foreach (var item in Model)
     {
        <div><tr>
            <td>@item.Nome</td>
            <td>@item.Tipo.Nome</td>
            <td>@item.Valor</td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="AddEdit" asp-route-id="@item.Id">Editar</a>
                <buton onclick="excluir('@item.Id', '@item.Nome')" class="btn btn-danger btn-sm">Excluir</buton>
            </td>

        </tr></div>
     }
    </tbody>
</table>

<div class="modal" tabindex="-1" role="dialog" id="del-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir Produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o produto <span id="nome-produto"></span>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Sim</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{ 
    <script>

        function excluir(id, nome)
        {
            $('#del-modal').modal('show');
            $("#nome-produto").text(nome);

        }

    </script>
}


